<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
     
</head>
<body class="container-fluid" ng-app="membertrackerapp">
    <header>
      <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <span class="brand" style="color:white;">Member Tracker</span>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li class="active"><a href="#">Home</a></li>
              <li><a href="#about">About</a></li>
              <li><a href="#contact">Contact</a></li>
            </ul>
            <form name="signinform" class="navbar-form pull-right" ng-controller="SignInController">
              <input required class="span2" type="text" placeholder="Email" ng-model="email">
              <input required class="span2" type="password" placeholder="Password" ng-model="password">
              <button ng-disabled="signinform.$invalid" ng-click="login(signinform)" type="submit" class="btn">Sign in</button>
                <img ng-src="{{loadingimage}}" src="" />
            </form>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    </header>
    <div id="body">

        @RenderSection("message", required: false)

        @RenderBody()

    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Member Tracker in the Cloud</p>
            </div>
        </div>
    </footer>





    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js"></script>
    
    @Scripts.Render("~/bundles/modules")
    @Scripts.Render("~/bundles/masterscripts")
    @RenderSection("controllers", required: false)
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
